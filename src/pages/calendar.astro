---
import Layout from '../layouts/Layout.astro';
import RaceCalendar from '../components/RaceCalendar.astro';
import sessions from '../data/league-season-sessions.json';

// If sessions is an object with a sessions property, we need to extract it
const raceSessions = sessions.sessions || [];
---

<Layout title="Season 13 - Calendar">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Race Calendar</h1>
    <RaceCalendar sessions={raceSessions} />
  </main>
</Layout>