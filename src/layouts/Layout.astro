---
interface Props {
	title?: string;
}

const { title = "Season 13" } = Astro.props;
const currentPath = Astro.url.pathname;
const basePath = import.meta.env.BASE_URL;

// Remove trailing slash for consistent comparison
const normalizedPath = currentPath.endsWith('/') ? currentPath.slice(0, -1) : currentPath;
const isSchedulePage = normalizedPath === basePath || normalizedPath === basePath.slice(0, -1);
const isStandingsPage = normalizedPath === `${basePath}/standings`;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="m-0 w-full h-full bg-gray-900 text-gray-100">
		<nav class="bg-gray-900/95 backdrop-blur-sm shadow-lg border-b border-gray-800">
			<div class="max-w-7xl mx-auto px-4">
				<div class="flex justify-between h-16">
					<div class="flex space-x-4 items-center">
						<div class="flex space-x-8">
							<a href={basePath}
							   class={`px-3 py-2 rounded-md text-sm font-medium transition-colors duration-150 ease-in-out
									 ${isSchedulePage
									   ? 'bg-gradient-to-r from-amber-400 to-yellow-500 text-gray-900'
									   : 'text-gray-300 hover:text-white hover:bg-gray-800'}`}>
								Schedule
							</a>
							<a href={`${basePath}/standings`}
							   class={`px-3 py-2 rounded-md text-sm font-medium transition-colors duration-150 ease-in-out
									 ${isStandingsPage
									   ? 'bg-gradient-to-r from-amber-400 to-yellow-500 text-gray-900'
									   : 'text-gray-300 hover:text-white hover:bg-gray-800'}`}>
								Standings
							</a>
						</div>
					</div>
				</div>
			</div>
		</nav>
		<slot />
	</body>
</html>
