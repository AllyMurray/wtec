---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
---

<div class="min-h-screen font-sans">
	<img class="fixed top-0 left-0 w-full h-full -z-10 blur-[100px] opacity-20" src={background.src} alt="" fetchpriority="high" />
	<main class="min-h-screen flex justify-center items-center p-4">
		<div class="w-full max-w-3xl bg-gray-900/90 backdrop-blur-sm rounded-lg shadow-lg overflow-hidden border border-gray-800">
			<div class="p-6">
				<h1 class="text-4xl font-bold mb-6 text-center bg-gradient-to-r from-amber-400 to-yellow-500 bg-clip-text text-transparent drop-shadow">Race Schedule</h1>
				<div class="overflow-x-auto">
					<table class="w-full text-left">
						<thead>
							<tr class="bg-gray-800/50">
								<th class="px-4 py-3 border-b border-gray-700 text-gray-400 uppercase text-xs tracking-wider font-semibold">Event</th>
								<th class="px-4 py-3 border-b border-gray-700 text-gray-400 uppercase text-xs tracking-wider font-semibold">Date</th>
								<th class="px-4 py-3 border-b border-gray-700 text-gray-400 uppercase text-xs tracking-wider font-semibold">Location</th>
							</tr>
						</thead>
						<tbody>
							<tr class="hover:bg-gray-800/30">
								<td class="px-4 py-3 border-b border-gray-700">RD1</td>
								<td class="px-4 py-3 border-b border-gray-700">09/01/25</td>
								<td class="px-6 py-4">
									<div class="flex flex-col">
										<span>Silverstone Circuit</span>
										<span class="text-xs text-gray-400">International</span>
									</div>
								</td>
							</tr>
							<tr class="hover:bg-gray-800/30">
								<td class="px-4 py-3 border-b border-gray-700">RD2</td>
								<td class="px-4 py-3 border-b border-gray-700">23/01/25</td>
								<td class="px-6 py-4">
									<div class="flex flex-col">
										<span>Summit Point Raceway</span>
										<span class="text-xs text-gray-400">School</span>
									</div>
								</td>
							</tr>
							<tr class="hover:bg-gray-800/30">
								<td class="px-4 py-3 border-b border-gray-700">RD4</td>
								<td class="px-4 py-3 border-b border-gray-700">06/02/25</td>
								<td class="px-6 py-4">
									<div class="flex flex-col">
										<span>Oulton Park Circuit</span>
										<span class="text-xs text-gray-400">Intl w/no Chicanes</span>
									</div>
								</td>
							</tr>
							<tr class="hover:bg-gray-800/30">
								<td class="px-4 py-3 border-b border-gray-700">RD6</td>
								<td class="px-4 py-3 border-b border-gray-700">20/02/25</td>
								<td class="px-6 py-4">
									<div class="flex flex-col">
										<span>Fuji International Speedway</span>
										<span class="text-xs text-gray-400">No Chicane</span>
									</div>
								</td>
							</tr>
							<tr class="hover:bg-gray-800/30">
								<td class="px-4 py-3 border-b border-gray-700">RD6</td>
								<td class="px-4 py-3 border-b border-gray-700">06/03/25</td>
								<td class="px-6 py-4">
									<div class="flex flex-col">
										<span>Road Atlanta</span>
										<span class="text-xs text-gray-400">Full Course</span>
									</div>
								</td>
							</tr>
							<tr class="hover:bg-gray-800/30">
								<td class="px-4 py-3 border-b border-gray-700">RD6</td>
								<td class="px-4 py-3 border-b border-gray-700">20/03/25</td>
								<td class="px-6 py-4">
									<div class="flex flex-col">
										<span>Watkins Glen International</span>
										<span class="text-xs text-gray-400">Classic</span>
									</div>
								</td>
							</tr>
							<tr class="hover:bg-gray-800/30">
								<td class="px-4 py-3 border-b border-gray-700">RD7</td>
								<td class="px-4 py-3 border-b border-gray-700">03/04/25</td>
								<td class="px-6 py-4">
									<div class="flex flex-col">
										<span>Okayama International Circuit</span>
										<span class="text-xs text-gray-400">Full Course</span>
									</div>
								</td>
							</tr>
							<tr class="hover:bg-gray-800/30">
								<td class="px-4 py-3 border-b border-gray-700">RD8</td>
								<td class="px-4 py-3 border-b border-gray-700">17/04/25</td>
								<td class="px-6 py-4">
									<div class="flex flex-col">
										<span>Thruxton Circuit</span>
										<span class="text-xs text-gray-400"></span>
									</div>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
				<div class="mt-6 space-y-2">
					<div class="text-center text-sm text-gray-300 bg-gray-700/30 py-2 px-4 rounded-lg">
						<p class="mb-4">Format: 10 min open qual 3 x 15 min races</p>
						<p>Session opens at 19:00 | Qualifying starts around 20:00 (may be delayed slightly for late arrivals)</p>
					</div>
				</div>
			</div>
		</div>
	</main>
</div>

<style>
	@media screen and (max-width: 768px) {
		div {
			display: flex;
			flex-direction: column;
		}
	}
</style>
