---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
---

<div class="min-h-screen font-sans">
	<img class="fixed top-0 left-0 w-full h-full -z-10 blur-[100px] opacity-30" src={background.src} alt="" fetchpriority="high" />
	<main class="min-h-screen flex justify-center items-center p-4">
		<div class="w-full max-w-3xl bg-gray-800 rounded-lg shadow-lg overflow-hidden">
			<div class="p-6">
				<h1 class="text-2xl font-bold mb-4 text-center">Season 13 Race Schedule</h1>
				<div class="overflow-x-auto">
					<table class="w-full text-left">
						<thead>
							<tr class="bg-gray-700">
								<th class="px-4 py-2 border-b border-gray-600">Event</th>
								<th class="px-4 py-2 border-b border-gray-600">Date</th>
								<th class="px-4 py-2 border-b border-gray-600">Location</th>
							</tr>
						</thead>
						<tbody>
							<tr class="hover:bg-gray-700">
								<td class="px-4 py-2 border-b border-gray-600">RD1</td>
								<td class="px-4 py-2 border-b border-gray-600">09/01/25</td>
								<td class="px-4 py-2 border-b border-gray-600">Silverstone Intl</td>
							</tr>
							<tr class="hover:bg-gray-700">
								<td class="px-4 py-2 border-b border-gray-600">RD2</td>
								<td class="px-4 py-2 border-b border-gray-600">23/01/25</td>
								<td class="px-4 py-2 border-b border-gray-600">Summit Point</td>
							</tr>
							<tr class="hover:bg-gray-700">
								<td class="px-4 py-2 border-b border-gray-600">RD3</td>
								<td class="px-4 py-2 border-b border-gray-600">06/02/25</td>
								<td class="px-4 py-2 border-b border-gray-600">Oulton Park (No Chicanes)</td>
							</tr>
							<tr class="hover:bg-gray-700">
								<td class="px-4 py-2 border-b border-gray-600">RD4</td>
								<td class="px-4 py-2 border-b border-gray-600">20/02/25</td>
								<td class="px-4 py-2 border-b border-gray-600">Fuji</td>
							</tr>
							<tr class="hover:bg-gray-700">
								<td class="px-4 py-2 border-b border-gray-600">RD5</td>
								<td class="px-4 py-2 border-b border-gray-600">06/03/25</td>
								<td class="px-4 py-2 border-b border-gray-600">Road Atlanta</td>
							</tr>
							<tr class="hover:bg-gray-700">
								<td class="px-4 py-2 border-b border-gray-600">RD6</td>
								<td class="px-4 py-2 border-b border-gray-600">20/03/25</td>
								<td class="px-4 py-2 border-b border-gray-600">Watkins Glen Cup</td>
							</tr>
							<tr class="hover:bg-gray-700">
								<td class="px-4 py-2 border-b border-gray-600">RD7</td>
								<td class="px-4 py-2 border-b border-gray-600">03/04/25</td>
								<td class="px-4 py-2 border-b border-gray-600">Okayama</td>
							</tr>
							<tr class="hover:bg-gray-700">
								<td class="px-4 py-2 border-b border-gray-600">RD8</td>
								<td class="px-4 py-2 border-b border-gray-600">17/04/25</td>
								<td class="px-4 py-2 border-b border-gray-600">Thruxton</td>
							</tr>
						</tbody>
					</table>
				</div>
				<div class="mt-4 text-center text-sm text-gray-300">
					Format: 10 min open qual 3 x 15 min races
				</div>
			</div>
		</div>
	</main>
</div>

<style>
	@media screen and (max-width: 768px) {
		div {
			display: flex;
			flex-direction: column;
		}
	}
</style>
