---
import trackAssets from '../data/track-assets.json';
import type { LeagueSeasonSession } from '../schemas/league-season-sessions';
import { DateTime } from 'luxon';

interface Props {
  sessions: LeagueSeasonSession[];
}

const { sessions } = Astro.props;

function getTrackInactiveUrl(trackId: number) {
  const track = trackAssets[trackId];
  if (!track?.track_map) return null;
  return `${track.track_map}inactive.svg`;
}

// Sort sessions by date
const sortedSessions = [...sessions]
  .filter(session => {
    const date = DateTime.fromISO(session.launch_at).setZone('Europe/London'); // Convert UTC to London time
    return date.weekday === 4 && date.hour === 19 && date.minute === 0;
  })
  .sort(
    (a, b) => new Date(a.launch_at).getTime() - new Date(b.launch_at).getTime()
  );

// Split into past and upcoming races
const now = DateTime.now();
const pastSessions = sortedSessions
  .filter(s => DateTime.fromISO(s.launch_at) < now)
  .sort(
    (a, b) => new Date(b.launch_at).getTime() - new Date(a.launch_at).getTime()
  );

const upcomingSessions = sortedSessions.filter(
  s => DateTime.fromISO(s.launch_at) >= now
);

function formatDate(date: Date) {
  return DateTime.fromJSDate(date)
    .setZone('Europe/London')
    .toFormat('d MMM yyyy');
}

function formatTime(date: Date) {
  return DateTime.fromJSDate(date).setZone('Europe/London').toFormat('HH:mm');
}

function getTrackMapUrl(trackId: number) {
  return `https://members-ng.iracing.com/track/map/${trackId}`;
}
---

<div class="space-y-12">
  <section>
    <h2 class="text-2xl font-bold mb-4">Upcoming Races</h2>
    <div class="space-y-4">
      {
        upcomingSessions.map(session => (
          <div class="bg-gray-800 p-4 rounded-lg">
            <div class="flex justify-between items-start">
              <div class="min-w-64">
                <h3 class="text-xl font-semibold">
                  {session.track.track_name}
                </h3>
                {session.track.config_name && (
                  <p class="text-gray-400">{session.track.config_name}</p>
                )}
              </div>
              <div class="flex items-center justify-end w-64">
                <img
                  src={getTrackInactiveUrl(session.track.track_id)}
                  alt={`${session.track.track_name} track map`}
                  class="w-64 h-22 object-contain"
                />
              </div>
            </div>
            <div class="flex justify-between items-center mt-4">
              <p class="text-lg">
                {formatDate(DateTime.fromISO(session.launch_at).toJSDate())} |{' '}
                {formatTime(DateTime.fromISO(session.launch_at).toJSDate())}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <section>
    <h2 class="text-2xl font-bold mb-4 text-gray-400">Past Races</h2>
    <div class="space-y-4">
      {
        pastSessions.map(session => (
          <a
            href={`/wtec/races/${session.subsession_id}`}
            class="block bg-gray-800/50 p-4 rounded-lg border border-gray-700 hover:bg-gray-800/75 hover:border-gray-600 transition-all group"
          >
            <div class="flex justify-between items-start">
              <div class="min-w-64">
                <h3 class="text-xl font-semibold group-hover:text-white transition-colors">
                  {session.track.track_name}
                </h3>
                {session.track.config_name && (
                  <p class="text-gray-400">{session.track.config_name}</p>
                )}
              </div>
              <div class="flex items-center justify-end w-64">
                <img
                  src={getTrackInactiveUrl(session.track.track_id)}
                  alt={`${session.track.track_name} track map`}
                  class="w-64 h-22 object-contain"
                />
              </div>
            </div>
            <div class="flex justify-between items-center mt-4">
              <p class="text-lg">
                {formatDate(DateTime.fromISO(session.launch_at).toJSDate())}
              </p>
              <span class="inline-flex items-center gap-1 text-blue-400 group-hover:text-blue-300 transition-colors">
                View Results â†’
              </span>
            </div>
          </a>
        ))
      }
    </div>
  </section>
</div>

<style>
  .race-event h3 a {
    color: inherit;
    text-decoration: none;
  }

  .race-event h3 a:hover {
    text-decoration: underline;
  }
</style>
